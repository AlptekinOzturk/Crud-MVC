@{
	ViewData["Title"] = "Index";
}
@model List<Category>
<div class="row mt-3">
	<div class="col-md-12">
		@if (Model is not null && Model.Count > 0)
		{
			<div class="card">
				<div card-header>
					<h3 class="card-title">Kategori Listesi</h3>
				</div>
				<div class="card-body">
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>Id</th>
								<th>Ad</th>
								<th>Açıklama</th>
								<th>Durum</th>
								<th>Ekleme Tarihi</th>
								<th>Güncelleme Tarihi</th>
								<th>Detay</th>
								<th>Güncelle</th>
								<th>Sil</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var category in Model)
							{
								<tr>
									<td>@category.Id</td>
									<td>@category.Name</td>
									<td>@category.Description</td>
									<td>@category.Status</td>
									<td>@category.CreatedDate</td>
									<td>@category.UpdatedDate</td>
									<td>
										<a class="btn btn-outline-info">Detay</a>
									</td>
									<td>
										<a class="btn btn-outline-success">Güncelle</a>
									</td>
									<td>
										<a class="btn btn-outline-danger">Sil</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				
			</div>
		}
		else
		{
			<h2>Henüz Kategori Yok!</h2>
		}
		<div class="card-footer">
			<a asp-controller ="Categories" asp-action="CreateCategory" class="btn btn-outline-dark d-block">Yeni Kategori Ekle</a>
		</div>
	</div>
</div>